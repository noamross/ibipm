year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("Eventually this will describe how to cite us")
bibentry(bibtype = "Manual",
         title = "{ibipm}: Individual-based integro-projection models",
         author = c(person("Noam", "Ross"),
                    person("Sebastian", "Schreiber")),
         year = year,
         note = note,
         url = "https://github.com/noamross/ibipm")

citEntry(
 entry="Article",
 title="Our awesome paper",
 journal="Methods in Ecology and Evolution"
 volume= "73",
 number="1",
 pages="3-36",
 year="2011",
 author="S. N. Ross and S. Schreiber",
 textVersion="The whole citation" )


